/**index.wxss**/

page{
  width: 100vw;
  height: 200vh;
}
image{
  width: 100vw;
}

.cover{
  width: 100vw;
  height: 100vh;
}
.coverbackground{
  width: 100%;
  height: 100%;
  z-index: 1;
}
.covertitle{
  width: 100vw;
  height: 10vh;
  text-align: center;
  color: white;
  font-size: 2rem;
  z-index: 2;
}
.covercontent{
  width: 100vw;
  height: 10vh;
  text-align: center;
  color: white;
  font-size: 0.8rem;
  opacity: 0.8;
  z-index: 2;
}
.coverbutton{
  width: 50rpx;
  height: 50rpx;
  z-index: 2;
}

.scroll{
  width: 100vw;
  height: 30vh;
}
.scrollitem{
  width: 100vw;
  height: 30vh;
}

.introduction{
  padding: 5vw;
}
.text1{
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  font-weight: bold;
  font-size: 40rpx;
}
.text2, .text3{
  text-indent: 3%;
  font-size: 30rpx;
}