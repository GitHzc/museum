.slide-image {
  width:100%;
}

#indicator {
  width:68rpx;
  height:50rpx;
  position:relative;
  color:#d2d2d2;
  background:rgba(0, 0, 0, 0.90);
  z-index: 100;
  bottom:60rpx;
  text-align: center;
  border-radius: 2px;
}

.article-sub-title .bar{
  width:10rpx;
  height:1.3em;
  background:#1a9475;
  display:inline-block;
  vertical-align:bottom;
  margin-right:8px;
}

#article {
  padding:10px;
  margin-top:-20px;
}

#article-title {
  font-size:2em;
}

.article-sub-title{
  padding:5px;
  font-size:1.5em;
  margin:10px 0px;
}

#exhibition-area {
  border-top:1px solid #dcdcdc;
  border-left:1px solid #dcdcdc;
  border-right:1px solid #dcdcdc;
}

.exhibition-area-item {
  border-bottom:1px solid #dcdcdc;
}

.exhibition-area-item-top {
  display:flex;
  justify-content:space-between;
  padding:9px;
  align-items:center;
}

#right-arrow {
  width:20px;
  height:20px;
}

.exhibition-picture-container {
  display:flex;
  justify-content:space-between;
  margin-bottom:20px;
}

.exhibition-picture-item {
  width:45%;
  text-align:center;
}

.exhibition-picture-item image{
  width:100%;
}

.exhibition-area-item-bottom {
  padding-top:10px;
  padding-left:10px;
  padding-right:10px;
}