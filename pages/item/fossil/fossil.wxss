}

swiper {
  margin-top: 15rpx;
}

.swiper-tab {
  width: 80%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  margin: auto;
  font-size:30rpx;
  font-weight: bolder;
}

.swiper-tab-item {
  width: 100%;
  color: #434343;
}

.active {
  border-bottom: 4rpx solid #F65959;
}

swiper-item image {
  width: 45rpx;
  height: 45rpx;
}

