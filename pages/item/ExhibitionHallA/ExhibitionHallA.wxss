.slide-image {
  width:100%;
}

view#cover {
  width: 100%;
  height: 100%;
  background:rgba(0, 0, 0, 0.90);
  z-index:150;
  position: absolute;
}

#indicator {
  width:68rpx;
  height:50rpx;
  position:relative;
  color:#d2d2d2;
  background:rgba(0, 0, 0, 0.90);
  z-index: 100;
  bottom:60rpx;
  text-align: center;
  border-radius: 2px;
}

.article-sub-title .bar{
  width:10rpx;
  height:1.3em;
  background:#1a9475;
  display:inline-block;
  vertical-align:bottom;
  margin-right:8px;
}

#article {
  padding:10px;
  margin-top:-20px;
}

#article-title {
  font-size:1.7em;
}

.article-sub-title{
  padding:5px;
  font-size:1.5em;
  margin:10px 0px;
}

.exhibition-picture-container {
  display:flex;
  justify-content:space-between;
  align-items: flex-end;
  padding:10px;
}

.exhibition-picture {
  width:45%;
  text-align:center;
}

.exhibition-picture image {
  width:100%;
}

