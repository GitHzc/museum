/* pages/user/user.wxss */

@import "/weui.wxss";

.container{
  padding: 5vw;
}

.usercard {
  padding: 5vw;
  background-color: #096d48;
  display: flex;
  align-items: center;
  border-radius: 20rpx
}
.useravatar {
  position: relative;
  width: 20vw;
  height: 20vw;
  margin-right: 5vw;
  border-radius: 50%;
}
.userinfo{
  flex-direction: column;
}
.usernickname {
  display: block;
  font-size: 50rpx;
  color: #FFF;
}
.otherinfo{
  flex-direction: row;
}
.usersex {
  display: inline-block;
  color: #FFF;
  margin-right: 2vw;
}
.userage{
  display: inline-block;
  color: #FFF;
  margin-right: 2vw;
}
.editinfo{
  display: inline-block;
  width: 5vw;
  height: 5vw;
}

.weui-panel__bd{
  margin-top: 5vw;
}